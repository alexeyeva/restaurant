<%= form_for :reservation do |f| %>
  <div class="form-group">
    <%= f.label(:table_number, "Table number: ") %>
    <%= f.text_field :table_number, class:'form-control', placeholder:'Table number' %>
  </div>
 
  <div class="form-group">
    <%= f.label(:start_time, "Date and time of reservation") %><br>
    <%= datetime_select("reservation", "start_time") %>
  </div>
  
  <div class="form-group">
    <%= f.label(:end_time, "Expected end date and time of reservation") %><br>
    <%= datetime_select("reservation", "end_time") %>
  </div>
 
  <p>
  	<%= link_to("Cancel", reservation_path(id: params[:id]), class:'btn btn-danger') %>
    <%= f.button("Save", type:'submit', method: :update, controller: 'reservations', class:'btn btn-success') %>
  </p>
<% end %>
	